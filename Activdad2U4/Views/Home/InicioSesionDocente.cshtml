@model Activdad2U4.Models.Maestro
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{ 
    Layout = "_Layout";
}
<main>
    <section id="datos">
        <h1>Inicio de sesión</h1>
        <form method="post" action="~/Home/InicioSesionDocente">
            <label>Clave:</label><br />
            <input type="number" asp-for="NoControl" required /><br />
            <label>Contraseña:</label><br />
            <input type="password" asp-for="Contrasena" required /><br />
            <input type="submit" value="Aceptar" /><br />
            <a href="~/Home/InicioSesionDirector">Iniciar como Director </a>
            @Html.ValidationSummary()
        </form>
    </section>
</main>
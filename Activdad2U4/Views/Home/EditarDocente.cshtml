@model Activdad2U4.Models.Maestro
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{ 
    Layout = "_Layout"; 
}
<main>
    <section id="datos">
        <h1>Modificar datos</h1>
        <form method="post" action="~/Home/EditarDocente">
            <input type="hidden" asp-for="Id" /><br />
            <label id="labels">Número de control:</label>
            <input id="txtdisplay" type="number" asp-for="NoControl" required readonly /><br />
            <label id="editar">Nombre completo:</label>
            <input type="text" asp-for="Nombre" required /><br />
            @Html.ValidationSummary()
            <input type="submit" value="Aceptar" /><br />
            <a href="~/Home/VerDocente">Regresar</a>
        </form>
    </section>
</main>

